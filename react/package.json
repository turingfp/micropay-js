{
    "name": "@micropaysdk/react",
    "version": "1.0.1",
    "description": "React components and hooks for Micropay mobile money payments",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./src/index.js",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./dist/index.cjs"
        },
        "./styles.css": "./src/styles/styles.css"
    },
    "scripts": {
        "build": "rm -rf dist && mkdir -p dist && babel src -d dist --out-file-extension .cjs --presets @babel/preset-env,@babel/preset-react && node ../../scripts/fix-imports.js ./dist",
        "test": "vitest",
        "storybook": "storybook dev -p 6006",
        "prepublishOnly": "npm run build"
    },
    "files": [
        "src",
        "dist"
    ],
    "keywords": [
        "micropay",
        "react",
        "payments",
        "mpesa",
        "mobile-money",
        "stk-push",
        "daraja",
        "africa-payments"
    ],
    "author": "Micropay Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/turingfp/micropay"
    },
    "peerDependencies": {
        "react": ">=17.0.0",
        "react-dom": ">=17.0.0"
    },
    "dependencies": {
        "@micropaysdk/core": "^1.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
        "vitest": "^1.0.0"
    }
}