{
    "name": "@micropaysdk/core",
    "version": "1.0.0",
    "description": "Micropay - Mobile money micropayments for emerging markets",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./src/index.js",
    "types": "./src/index.d.ts",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "build": "babel src -d dist --out-file-extension .cjs",
        "test": "vitest",
        "lint": "eslint src/",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "micropay",
        "mpesa",
        "mobile-money",
        "payments",
        "africa",
        "sdk",
        "api",
        "fintech",
        "daraja"
    ],
    "author": "Micropay Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/turingfp/micropay"
    },
    "files": [
        "src",
        "dist"
    ],
    "devDependencies": {
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
